<% if(locals.user) { %>
  <div class="container-fluid">
    <div class="row">
      <!-- Assigned reviews -->
      <div class="col-md-12 col-lg-7 my-2">
        <h1 class="text-center mb-4">Assigned Reviews</h1>
        <div class="d-flex flex-wrap justify-content-center">
          <% for(review of assignedUserReviews) { %>
          <div class="col-12 col-md-8 col-lg-6 p-3 mb-4 rounded shadow" style="background-color: #F4F4F4;">
            <form action="/review/create/<%= employee._id %>" class="d-flex flex-column" method="POST">
              <div class="mb-3">
                <label for="recipient" class="fw-semibold">Recipient:</label>
                <input type="email" class="form-control mt-2" id="recipient" value="<%= review.email %>" readonly name="recipient_email" />
              </div>
              <div class="mb-3">
                <label for="feedback-form" class="form-label fw-semibold">Feedback:</label>
                <textarea class="form-control" id="feedback-form" name="feedback" rows="3"></textarea>
              </div>
              <button class="btn btn-primary align-self-end" style="width: 40%" type="submit">Submit</button>
            </form>
          </div>
          <% } %>
        </div>
      </div>
  
      <!-- Feedbacks given by others -->
      <div class="col-12 col-lg-5 my-2">
        <h1 class="text-center mb-4">Feedbacks by Others</h1>
  
        <div class="d-flex flex-column justify-content-center">
          <% for (review of reviewsRecievedFromOthers) { %>
          <div class="p-3 bg-light border rounded my-3">
            <dl>
              <dt class="fw-semibold">
                Reviewer: <span class="fw-normal"><%= review.reviewer.email %>(<%= review.reviewer.username %>)</span>
              </dt>
              <dt class="fw-semibold">
                Feedback: <span class="fw-normal"><%= review.review %></span>
              </dt>
            </dl>
          </div>
          <% } %>
        </div>
      </div>
    </div>
  </div>
  <% } %>